{
  "name": "dotmenu",
  "version": "0.3.0",
  "description": "Command menu for modern browsers",
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/mattpjohnson/dotmenu",
  "author": "Matt Johnson <matt@mattpjohnson.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:compile && yarn build:rollup && yarn build:css",
    "build:compile": "tsc",
    "build:css": "node-sass styles/styles.scss | postcss --use autoprefixer > dist/dotmenu.min.css",
    "build:rollup": "rollup dist/index.js --file dist/dotmenu.umd.js --format umd --name dotmenu --sourcemap",
    "commit": "git-cz",
    "lint": "tslint --project . 'src/**/*.ts'",
    "start": "ts-node src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "coverage"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn lint && jest"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "autoprefixer": "^9.1.5",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.5.0",
    "jest-sonar-reporter": "^2.0.0",
    "node-sass": "^4.9.3",
    "postcss-cli": "^6.0.0",
    "prettier": "^1.14.2",
    "rollup": "^0.65.2",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
